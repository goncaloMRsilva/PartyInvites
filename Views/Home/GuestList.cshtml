@model IEnumerable<GuestResponse>
@{
    ViewData["Title"] = "Guest List";
}

<h1>Guest List</h1>
<div class="mb-3">
    <a asp-action="PeopleComingParty">People coming to the party</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Will attend</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var guest in Model)
        {
            <tr>
                <td>@guest.Name</td>
                <td>
                    @if(guest.WillAttend == null)
                {
                    @: Don´t know
                }else if(guest.WillAttend == true){
                    @: Yes
                } else
                {
                    @: No
                }
                </td>
            </tr>
        }
    </tbody>
</table>