@model GuestResponse

@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>
<h2>Are you coming to the party?</h2>

<form asp-action="Register" method="post">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" placeholder="Enter you name" />
        </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" placeholder="Enter you Email" />
    </div>


    <div class="form-group">
        <label asp-for="Phone"></label>
        <input asp-for="Phone" class="form-control" placeholder="Enter your phone number"/>
    </div>


    <div class="form-group>
        <label asp-for="Will attend">Are you coming to the party?</label>
        <select asp-for="WillAttend">
            <option value="">
                I don´t know yet
            </option>
            <option value="true">
                    Yes, i will go
            </option>
            <option value="false">
                No, sorry can´t make it
            </option>
        </select>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
